<h1>Sign Up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <p>
      <img src="http://i.imgur.com/65goE8v.gif">
      <%= pluralize(@user.errors.count, "errors") %> prohibited this account from being saved:
    </p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
